-- extra-source-files:
cabal-version:       >=1.10

flag pedantic
  Description: Enable -Werror
  Default:     False

library
  exposed-modules:     Haskell.Ide.ExamplePluginAsync
  build-depends:       base >= 4.9 && < 5
                     , ghc-mod-core
                     , hie-plugin-api
                     , stm
                     , text
  ghc-options:         -Wall
  if flag(pedantic)
     ghc-options:      -Werror
  default-language:    Haskell2010
